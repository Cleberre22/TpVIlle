{% extends 'base.html.twig' %} {% block title %}Article index{% endblock %} {%
block body %}

<section class="container">
  <div class="row">
    <div class="col">
      <h1>Article <i class="fa-solid fa-pen-to-square"></i></h1>

      <table class="table">
        <thead>
          <tr>
            <th>Image</th>
            <th>Titre</th>
            <th>Contenu</th>
            <th>Auteur</th>
            <th>Date de création</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {% for article in articles %}
          <tr>
            <td>
              <img
                src="{{ asset('uploads/photos/' ~ article.img) }}"
                width="100"
              />
            </td>
            <td>{{ article.title }}</td>
            <td>{{ article.content|u.truncate(150, '...', false)}}</td>
            <td>{{ article.user.lastname }}</td>
            <td>
              {{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}
            </td>
            <td>
              <a class="btn btn-primary mb-1" href="{{ path('app_article_show', { id: article.id }) }}"
                >Voir</a
              >
              <a class="btn btn-primary" href="{{ path('app_article_edit', { id: article.id }) }}"
                >Modifier</a
              >
            </td>
          </tr>
          {% else %}
          <tr>
            <td colspan="6">Aucun résultat</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>

      <a class="btn btn-primary" href="{{ path('app_article_new') }}">Créer un nouvel article</a>
    </div>
  </div>
</section>

{% endblock %}
