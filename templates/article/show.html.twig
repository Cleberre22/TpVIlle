{% extends 'base.html.twig' %}
{% block title %}Articles{% endblock %} 
{% block body %}

<div class="container">
  <div class="containerArticle">
    <div class="container py-5">
      
      <div class="row d-flex justify-content-center">
        <div class="col-lg-10 showArticle">
          <div class="d-flex justify-content-center p-5">
            <img class="img-fluid"
              src="{{ asset('uploads/photos/' ~ article.img) }}"
              width="750"/>
          </div>
          <div class="justify-content-start mb-4">
            <h2 class="mb-4">{{ article.title }}</h2>
            <p>{{ article.content|raw }}</p>
            <div>{{article.createdAt|date('d/m/Y')}} - {{article.user.firstName }} {{article.user.lastname }}</div>
          </div>
          <div>
            <p class="justify-content-end">
              <a href="{{ path('app_article_index') }}">Retour aux articles <span><i class="fas fa-angle-right"></i></span></a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
